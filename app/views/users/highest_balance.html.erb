<div>
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Username</th>
          <th>Balance</th>
          <th style="width: 36px;"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @users.each.with_index(1) do |user, index| %>
            <tr>
              <td><%= index %></td>
              <td><%= user.username %></td>
              <td><%= user.balance %></td>
            </tr>
          <% end %>
        </tr>
      </tbody>
    </table>
</div>
