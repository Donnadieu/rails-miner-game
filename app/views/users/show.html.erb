<div class="container">
	<div class="row">
		<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
			<div class="col-sm-12">
				<div class="col-xs-12 col-sm-8">
					<h2><%= current_user.username %></h2>
					<p><strong>Email: </strong> <%= current_user.email %> </p>
					<p><strong>Current Ip: </strong> <%= current_user.current_sign_in_ip %> </p>
				</div>
			</div>
			<div class="col-xs-12 divider text-center">
				<div class="col-xs-12 col-sm-4 emphasis">
					<h2><strong> <%= number_to_currency(current_user.balance) %> </strong></h2>
					<p><small>Balance</small></p>
					<%= button_to 'Wallet', user_wallet_path(current_user), class: 'btn btn-success btn-block', method: 'get' %>
				</div>
				<div class="col-xs-12 col-sm-4 emphasis">
					<h2><strong><%= current_user.energy %>K</strong></h2>
					<p><small>Energy</small></p>
					<%= button_to 'Get More', energy_packs_path, class: 'btn btn-info btn-block', method: 'get' %>
				</div>
				<div class="col-xs-12 col-sm-4 emphasis">
					<h2><strong><%= current_user.miners.count %></strong></h2>
					<p><small>Total Miners</small></p>
					<%= button_to 'Mining Rigs', user_mining_rigs_path(current_user), class: 'btn btn-primary btn-block', method: 'get' %>
				</div>
			</div>
		</div>
	</div>
</div>
