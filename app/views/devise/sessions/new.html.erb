<div class="row text-center" id='title'>
  <h1>Miner's Game</h1>
</div>

<div class="omb_login">
  <h3 class="omb_authTitle">Login or <strong><%= link_to 'Sign up', new_user_registration_path %></strong></h3>
  <div class="row omb_row-sm-offset-3 omb_socialButtons">
    <div class="col-xs-6 col-sm">
      <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn btn-lg btn-block omb_btn-facebook">
        <i class="fa fa-facebook visible-xs"></i>
        <span class="hidden-xs">Facebook</span>
      </a>
    </div>
  </div>

  <div class="row omb_row-sm-offset-3 omb_loginOr">
    <div class="col-xs-12 col-sm-6">
      <hr class="omb_hrOr">
      <span class="omb_spanOr">or</span>
    </div>
  </div>

  <div class="row omb_row-sm-offset-3">
    <div class="col-xs-12 col-sm-6 has-feedback">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "omb_loginForm") do |f| %>

        <div class="input-group">
          <div class="input-group-addon">
	          <span class="glyphicon glyphicon-envelope"></span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: 'required', class: "form-control", placeholder: "email address" %>
        </div>

        <span class="help-block"></span>

        <div class="input-group">
          <div class="input-group-addon">
	          <span class="glyphicon glyphicon-lock"></span>
          </div>
          <%= f.password_field :password, autocomplete: "off", required: 'true', class: "form-control", placeholder: "password" %>
        </div>

        <span class="help-block"><%= devise_error_messages! %></span>

          <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block'%>

      </form>
    </div>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="row omb_row-sm-offset-3">
        <div class="col-xs-12 col-sm-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>
  </div>
</div>
<% end %>
